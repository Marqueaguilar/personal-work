<Window x:Class="_16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Calendar x:Name="myCalender" HorizontalAlignment="Left" Height="168" Margin="91,84,0,0"
                  VerticalAlignment="Top" Width="185"
                    SelectionMode="SingleDate"
                  SelectedDatesChanged="myCalender_SelectedDatesChanged"/>        
        <Label x:Name="Result" Content="{}{Result label}" HorizontalAlignment="Left" Height="47" Margin="91,252,0,0" VerticalAlignment="Top" Width="185"/>

    </Grid>
</Window>
